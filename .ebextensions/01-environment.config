option_settings:
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    PORT: 8080
    # Database Configuration - Set these in EB Console
    # DB_HOST: your-rds-endpoint.region.rds.amazonaws.com
    # DB_PORT: 3306
    # DB_NAME: wedding_invitation_db
    # DB_USERNAME: your-db-username
    # DB_PASSWORD: your-db-password
    
    # Twilio Configuration - Set these in EB Console
    # TWILIO_ACCOUNT_SID: your-twilio-account-sid
    # TWILIO_AUTH_TOKEN: your-twilio-auth-token
    # TWILIO_WHATSAPP_FROM: whatsapp:+14155238886
    # TWILIO_MESSAGING_SERVICE_SID: your-messaging-service-sid
    # WEDDING_INVITATION_CONTENT_SID: your-content-sid
    # WEDDING_WEBSITE_URL: https://your-wedding-website.com
