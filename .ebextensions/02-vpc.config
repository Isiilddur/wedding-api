option_settings:
  aws:ec2:vpc:
    VPCId: vpc-xxxxxxxx  # Replace with your VPC ID
    Subnets: subnet-xxxxxxxx,subnet-yyyyyyyy  # Replace with your subnet IDs
    ELBSubnets: subnet-xxxxxxxx,subnet-yyyyyyyy  # Replace with your ELB subnet IDs
    ELBScheme: internet-facing
    AssociatePublicIpAddress: true
  
  aws:ec2:instances:
    InstanceTypes: t3.micro,t3.small
    
  aws:autoscaling:launchconfiguration:
    SecurityGroups: sg-xxxxxxxx  # Replace with your security group ID
    
  aws:elasticbeanstalk:environment:
    EnvironmentType: LoadBalanced
    LoadBalancerType: application
